@model Yuffie.WebApp.Models.YCPSElement

@{
    var elementId = Model.Name.Replace(" ", "_").Replace("'", "").Replace("/", "_");
}

<div element id="con_@elementId">
    @if(Model.Type == "Text" || Model.Type == "List" || Model.Type == "Radio")
    {
        <div class="col s6">
            <label for="el_@(elementId)">@(Model.Name)
                <p summary="@(elementId)"></p>
            </label>
        </div>
    }
    @if(Model.Type == "Check")
    {
        if(Model.Default != null && Model.Default.ToLower() == "true")
        {
            <p summary="@(elementId)">True</p>
        }
        else {
            <p summary="@(elementId)">False</p>            
        }
    }

    @if(Model.Type == "SubElement")
    {
         <div parent-element="@(Model.Name)">
            @foreach(var e in Model.Elements) {
                Html.RenderPartial("_SummaryElement", e);
            }
        </div>
    }
    @if(Model.Type == "Tree") 
    {
        foreach(var level in Model.Levels)
        {
            var levelId = level.Replace(" ", "_").Replace("'", "").Replace("/", "_");
            <div class="col s6">
                <label for="el_@(levelId)">@(level)
                    <p summary="@(levelId)"></p>
                </label>
            </div>
        }
    }
</div>
