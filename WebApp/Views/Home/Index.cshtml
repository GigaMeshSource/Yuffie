@model Yuffie.WebApp.Models.YuffieConfiguration

@for(var pageIndex = 0; pageIndex < Model.Pages.Count(); ++pageIndex)
{
    var page = Model.Pages[pageIndex];
    <div class="page" id="page@(pageIndex)">
            <div class="row">
                <div class="col s12">
                    <ul class="tabs">
                        <li class="tab col s3"><a href="#test1">Test 1</a></li>
                        <li class="tab col s3"><a class="active" href="#test2">Test 2</a></li>
                        <li class="tab col s3 disabled"><a href="#test3">Disabled Tab</a></li>
                        <li class="tab col s3"><a href="#test4">Test 4</a></li>
                    </ul>
                </div>
            <div id="test1" class="col s12"><div>
                    <ul class="collapsible popout " data-collapsible="accordion">
                        <li>
                            <div class="collapsible-header active"><i class="material-icons">filter_drama</i>First</div>
                            <div class="collapsible-body">
                                @for(var sectionIndex = 0; sectionIndex < page.Sections.Count(); ++sectionIndex)
                                {
                                    var section = page.Sections[sectionIndex];
                                    <div class="section" id="section@(sectionIndex)">
                                        @foreach(var element in section.Elements)
                                        {   
                                            Html.RenderPartial("_Element", element);
                                        }
                                    </div>
                                    <a class="waves-effect waves-light btn" value="validate" id="yuffieValidate">validate</a>     
                                }
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
            <div id="test2" class="col s12">Test 2</div>
            <div id="test3" class="col s12">Test 3</div>
            <div id="test4" class="col s12">Test 4</div>
        </div>
    </div>
}